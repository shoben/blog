<p style="color: green"><%= notice %></p>

<div class="conainer">
  <h2>Posts</h2>

  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path %>
</div>